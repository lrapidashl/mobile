<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberButton">
        <item name="android:layout_width">0dp</item>  // сделать размер кнопок адаптивным
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minWidth">77dp</item>
        <item name="android:minHeight">77dp</item>
        <item name="android:background">@drawable/circular_button</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NumberButtonHorizontal">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_margin">8dp</item>
