        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ActionButton">
        <item name="android:minWidth">77dp</item>
        <item name="android:minHeight">77dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/circular_button</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ActionButtonHorizontal">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/roboto</item>
